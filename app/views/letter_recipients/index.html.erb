<p id="notice"><%= notice %></p>

<h1>Letter Recipients</h1>

<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Letter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letter_recipients.each do |letter_recipient| %>
      <tr>
        <td><%= letter_recipient.recipient %></td>
        <td><%= letter_recipient.letter %></td>
        <td><%= link_to 'Show', letter_recipient %></td>
        <td><%= link_to 'Edit', edit_letter_recipient_path(letter_recipient) %></td>
        <td><%= link_to 'Destroy', letter_recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Letters</h1>

<table>
  <thead>
    <tr>
      <th>Recieved</th>
      <th>Published</th>
      <th>Is draft</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <tr>
        <td><%= letter.recieved %></td>
        <td><%= letter.published %></td>
        <td><%= letter.is_draft %></td>
        <td><%= letter.content %></td>
        <td><%= link_to 'Show', letter %></td>
        <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
        <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Letter', new_letter_path %>

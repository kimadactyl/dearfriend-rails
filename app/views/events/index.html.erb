<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Finish</th>
      <th>Title</th>
      <th>Description</th>
      <th>Street1</th>
      <th>Street2</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Eventbrite</th>
      <th>Facebook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.start %></td>
        <td><%= event.finish %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.street1 %></td>
        <td><%= event.street2 %></td>
        <td><%= event.city %></td>
        <td><%= event.postcode %></td>
        <td><%= event.eventbrite %></td>
        <td><%= event.facebook %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
